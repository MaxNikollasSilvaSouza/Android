<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.medio">
    <TableLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/ad"
                android:background="#00FF7F"
                android:padding="12dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="right"
                android:text="Acertos:  "
                />
            <TextView
                android:id="@+id/pnts"
                android:background="#00FF7F"
                android:padding="12dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="0"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.cpdb.jogo.jogodemariaauxiliadora.componenteVisual.MyView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:padding="15dp"
                app:srcCompat="@drawable/d1" />

            <com.cpdb.jogo.jogodemariaauxiliadora.componenteVisual.MyView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:padding="15dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/d1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.cpdb.jogo.jogodemariaauxiliadora.componenteVisual.MyView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:padding="15dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/d2" />

            <com.cpdb.jogo.jogodemariaauxiliadora.componenteVisual.MyView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:padding="15dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/d2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.cpdb.jogo.jogodemariaauxiliadora.componenteVisual.MyView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:padding="15dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/d3" />

            <com.cpdb.jogo.jogodemariaauxiliadora.componenteVisual.MyView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:padding="15dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/d3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.cpdb.jogo.jogodemariaauxiliadora.componenteVisual.MyView
                android:id="@+id/imageView7"
                android:layout_width="100dp"
                android:padding="15dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/d4" />

            <com.cpdb.jogo.jogodemariaauxiliadora.componenteVisual.MyView
                android:id="@+id/imageView8"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:padding="15dp"
                app:srcCompat="@drawable/d4" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>